# Local development environment variables
# Copy to .env and fill in local values only. Do NOT put production secrets here.

# Database (local)
DATABASE_URL="postgresql://username:password@localhost:5432/recommendacontractor"

# Auth.js (local)
AUTH_SECRET="your-local-auth-secret"
GOOGLE_CLIENT_ID="your-local-google-client-id"
GOOGLE_CLIENT_SECRET="your-local-google-client-secret"
FACEBOOK_CLIENT_ID="your-local-facebook-app-id"
FACEBOOK_CLIENT_SECRET="your-local-facebook-app-secret"

# App settings
PUBLIC_APP_URL="http://localhost:5173"
PUBLIC_SITE_NAME="Recommend a Contractor"
PUBLIC_CONTACT_EMAIL="support@recommendacontractor.com"

# Optional integrations (local)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-west-2"
AWS_S3_BUCKET="recommendacontractor-uploads"
STRIPE_SECRET_KEY=""
STRIPE_PUBLISHABLE_KEY=""
STRIPE_WEBHOOK_SECRET=""
SENDGRID_API_KEY=""
FROM_EMAIL="noreply@recommendacontractor.com"
GOOGLE_MAPS_API_KEY=""
AWS_REKOGNITION_REGION="us-west-2"

# Production deployment secrets are managed in GitHub Actions (do not store locally):
# These are referenced in .github/workflows/cloudrun-deploy.yml as ${{ secrets.* }}
# - PROD_AUTH_SECRET
# - PROD_DATABASE_URL
# - PROD_GOOGLE_CLIENT_ID
# - PROD_GOOGLE_CLIENT_SECRET
# - PROD_FACEBOOK_CLIENT_ID (optional)
# - PROD_FACEBOOK_CLIENT_SECRET (optional)
# - GCP_REGION (e.g., us-central1)
# - GCP_WORKLOAD_IDENTITY_PROVIDER
# - GCP_SERVICE_ACCOUNT_EMAIL

# Development
NODE_ENV="development"

